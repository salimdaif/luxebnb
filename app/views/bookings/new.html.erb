
<h1>Confirmation for <%= @booking.flat.title %>  </h1>


<%= simple_form_for @booking, :url => flat_bookings_path, :method => :post do |f| %>

  <h3>From</h3>
  <%=f.input :start_date, as: :date, html5: true %>
  <h3>To </h3>
  <%=f.input :end_date, as: :date, html5: true %>
  <h3>1.Extra Services</h3>
  <%= f.association :services,  as: "check_boxes", label_method: :full_description %>
  <%= f.submit "CONFIRM" %>
<% end %>

