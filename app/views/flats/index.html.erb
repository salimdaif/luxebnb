<h3>Find your comfort everywhere</h3>





<form action="/search" method="GET">
  <input type="text" name="city" placeholder="City" />
  <input type="date" name="start_date"/>
  <input type="date" name="end_time"/>
  <input type="number" name="capacity" placeholder="Capacity">
  <input type="submit" value="search" min="1" max="8" value="1"/>
</form>
<br>
<%= link_to "add a flat", new_flat_path, class: "btn btn-primary"%>
<% @flats.each do |flat| %>
      <h3><%= flat.title %></h3>
      <p><h4>description: </h4><%= flat.desc %></p>
      <p><h4>Address: </h4><%= flat.address %></p>
      <p><h4>city: </h4><%= flat.city %></p>
      <p><h4>capacity: </h4><%= flat.capacity %></p>
      <p><h4>room number: </h4><%= flat.room_number %></p>
      <p><h4>bathroom: </h4><%= flat.bathroom_number %></p>




      <%= link_to "See details", flat, class: "btn btn-primary"%>
      <% end %>
<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
